<div class="col-sm-4 center-block no-float login" id="login-buttons">
  <h1 class="text-center">Kitty Laser Bot</h1>

  <p class="text-center">
    <strong>New Users!</strong> Access to this site is restricted.<br>Signing up will automatically send a request for access.
  </p>

  <!-- oauth buttons -->
  <%= link_to "Sign in with Facebook", auth_path("facebook"),
      class: 'btn center col-sm-12 btn-oauth', id: 'btn-login-fb' %>
  <br>
  <%= link_to "Sign in with Twitter", auth_path("twitter"),
      class: 'btn center col-sm-12 btn-oauth', id: 'btn-login-twitter' %>
  <br>
  <%= link_to "Sign in with Github", auth_path("github"),
      class: 'btn center col-sm-12 btn-oauth', id: 'btn-login-github' %>

  <!-- register buttons -->
  <div class="signup-btns">
    <%= button_tag "Login",
        class: 'btn btn-login', id: 'btn-login' %>
  </div>
</div>

<!-- forms -->
<div class="col-sm-4 center-block no-float" id="form-signup">
  <%= form_for(:user, url: new_user_path)  do |f| %>
    <div class="form-group">
      <%= f.label :first_name, "First Name" %>
      <%= f.text_field :first_name, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :last_name, "Last Name" %>
      <%= f.text_field :last_name, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :email %>
      <%= f.text_field :email, class: "form-control" %>
    </div>

    <div class="form-group">
        <%= f.label :password %>
        <%= f.password_field :password, class: "form-control"  %>
    </div>

    <%= button_tag "Back", class: 'btn btn-login btn-back-login-btns' %>
    <%= f.submit "Sign Up", class: "btn btn-login" %>
  <% end %>
</div>

<div class="col-sm-4 center-block no-float" id="form-login">
  <%= form_for(:session, url: auth_path("manual"))  do |f| %>
    <div class="form-group">
      <%= f.label :email %>
      <%= f.text_field :email, class: "form-control" %>
    </div>

    <div class="form-group">
        <%= f.label :password %>
        <%= f.password_field :password, class: "form-control"  %>
    </div>

    <%= button_tag "Back", class: 'btn btn-login btn-back-login-btns' %>
    <%= f.submit "Log In", class: "btn btn-login" %>
  <% end %>
</div>
